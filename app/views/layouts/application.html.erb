<!DOCTYPE html>
<html>
  <head>
    <title>TestYourMemory</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body class="app text-center">
    <div class="cover-container d-flex h-100 p-3 mx-auto flex-column">
      <main role="main" class="inner cover">
        <%= yield %>
      </main>
      <footer class="mastfoot mt-auto">
        <div class="inner">
          <p><% link_to "Reset",reset_session_path, class:"btn btn-lg btn-secondary " %></p>
        </div>
      </footer>
    </div>
  </body>
</html>
